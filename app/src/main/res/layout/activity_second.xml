                android:background="@drawable/rectangle_4" />

            <TextView
                android:id="@+id/the_sisters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="585dp"
                android:text="@string/twelfth_night"
                android:textAppearance="@style/the_sisters"
                android:gravity="top" />

            <View
                android:id="@+id/rectangl07"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rectangle06"
                android:background="@drawable/rectangle_4" />

            <TextView
                android:id="@+id/a_little_cl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="645dp"
                android:text="@string/othello"
                android:textAppearance="@style/a_little_cl"
                android:gravity="top" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
